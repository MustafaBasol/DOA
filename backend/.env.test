# Test Environment Configuration
NODE_ENV=test

# Database
DATABASE_URL="postgresql://test_user:test_password@localhost:5432/doa_test?schema=public"

# JWT Secrets
JWT_SECRET="test-jwt-secret-key-for-testing-only"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-key-for-testing-only"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001

# CORS
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting (more permissive for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Email (mock settings for tests)
SMTP_HOST="smtp.test.com"
SMTP_PORT=587
SMTP_USER="test@test.com"
SMTP_PASS="test_password"
SMTP_FROM="noreply@test.com"

# Test Flags
SKIP_EMAIL_SENDING=true
MOCK_EXTERNAL_APIS=true
