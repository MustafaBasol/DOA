# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/doa_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-256-bits
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# n8n Webhook
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret
N8N_IP_WHITELIST=127.0.0.1
N8N_WHATSAPP_WEBHOOK_URL=https://your-n8n-instance.com/webhook/whatsapp

# Firebase Cloud Messaging (Push Notifications)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME=DOA WhatsApp Manager
EMAIL_FROM_EMAIL=noreply@autoviseo.com

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
