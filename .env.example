# ===========================================
# DOA WhatsApp Manager - Environment Variables
# ===========================================

# ===========================================
# NODE ENVIRONMENT
# ===========================================
NODE_ENV=production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://doa_user:your_secure_password@localhost:5432/doa_db?schema=public"

# Database credentials (used by Docker Compose)
POSTGRES_USER=doa_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=doa_db
POSTGRES_PORT=5432

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_generate_a_strong_one
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_different_from_above
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
BACKEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Frontend URL(s) - comma separated for multiple origins
CORS_ORIGIN=http://localhost,http://localhost:3000

# ===========================================
# RATE LIMITING
# ===========================================
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@autoviseo.com
SMTP_FROM_NAME=Autoviseo DOA

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ===========================================
# N8N INTEGRATION (Optional)
# ===========================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/
N8N_API_KEY=your_n8n_api_key

# ===========================================
# WHATSAPP API CONFIGURATION (Optional)
# ===========================================
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
# 10MB in bytes
UPLOAD_DIR=./uploads

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
# Options: error, warn, info, debug
LOG_FILE_PATH=./logs

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_SWAGGER_DOCS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_EMAIL_NOTIFICATIONS=true
